<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphics.controller.ControllerModesDuo">
   <children>
      <Label alignment="CENTER" graphicTextGap="2.0" prefHeight="5.0" prefWidth="337.0" text="Sélectionner les options bonus :" />
      <VBox spacing="5.0">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Taille du plateau :" />
                  <ComboBox fx:id="comboSize">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <CheckBox fx:id="buttonTp" alignment="CENTER" mnemonicParsing="false" text="Téléportation : Téléporte le monstre s'il est bloqué" />
            <CheckBox fx:id="buttonBr" alignment="CENTER" mnemonicParsing="false" text="Battle Royale : la carte rétrécit au fur et à mesure" />
         </children>
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#apply" text="OK" />
            <Button mnemonicParsing="false" onAction="#commands" text="Comment Jouer ?" />
         </children>
      </HBox>
   </children>
</VBox>
